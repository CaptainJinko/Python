#How to print only the a clolumn based on its index 
import  csv
with open("weather_data.csv") as data_file:
    data = csv.reader(data_file)
    temperature = []
    for row in data:
        print(row[1])  

---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
#How to print only the list in the column without the heading or column title  

import csv

with open("weather_data.csv") as data_file:
    data = csv.reader(data_file)
    temperature = []
    for row in data:
        if row[1] != "temp":
            temperature.append(row[1])
    print(temperature)

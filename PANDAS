import pandas
# Create a dataFrame from scratch, csv file will be created and all our files will added to the new_data.csv file 

data_dict = {
    "student": ["Amy ", " Jame", "Angela"],
    "scores": [75, 56, 65]
}

data = pandas.DataFrame(data_dict)
data.to_csv("new_data.csv")


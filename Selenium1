from selenium import webdriver

driver_chrome_path = "C:/Users/Elias/Development/chromedriver.exe"
driver = webdriver.Chrome(executable_path=driver_chrome_path)
wike_web = driver.get("https://www.wikipedia.org/wiki/Main_Page")

wiki_page=driver.find_element_by_css_selector("#articlecount a ")
print(wiki_page.text)  


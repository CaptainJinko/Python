driver.get("https://www.amazon.nl/?&tag=nltxtgoabkde-21&ref=pd_sl_7r6v6gl25n_e&adgrpid=95395531359&hvpone=&hvptwo=&hvadid=424604451761&hvpos=&hvnetw=g&hvrand=2717354022784762193&hvqmt=e&hvdev=c&hvdvcmdl=&hvlocint=&hvlocphy=1010755&hvtargid=kwd-10573980&hydadcr=3216_2012250&gclid=CjwKCAjwos-HBhB3EiwAe4xM9-LtYXAH-OpLYaDQMFeCRrYqs1wynqzlsr4DaF5dXYaYk5_o-Ut2DBoCi2MQAvD_BwE")

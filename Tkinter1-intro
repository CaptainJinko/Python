# button
def button_clicked():
    print("I got clicked")
    new_text = input.get()
    my_label.config(text=new_text)


button = Button(text="Click me", command=button_clicked)

button.pack()
# Entry

input = Entry(width=10)
input.pack()
print(input.get())


from tkinter import *

window = Tk()
window.title("My First GUI program")
window.minsize(width=500, height=300)
my_label = Label(text="I am a label", font=("Arial", 24, "bold "))
my_label.pack(side="top")

#label
my_label["text"]= "New Text"
my_label.config(fg="red", bg="blue")

#button
buttom = Button()


window.mainloop()
